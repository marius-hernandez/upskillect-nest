generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}


model Course {
  id              String       @id @default(uuid())
  courseTitle     String       
  instituteUuid   String
  duration        Int
  rating          Decimal  
  startsAt        Int
  description     String
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model Institute {
  id  Int @id @default(autoincrement())
  institute   String
  location    String
  rating      Decimal  
  description String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}